package ej367repartiendoRegalos;

import static org.junit.jupiter.api.Assertions.*;

import java.util.ArrayList;
import java.util.List;

import org.junit.jupiter.api.Test;

class RepartiendoRegalosTest {

	@Test
	void testRepartirRegalos1() {

		List<Integer> portales = new ArrayList<Integer>(List.of(2, 4));

		RepartiendoRegalos.repartirRegalos(0, portales);
	}

	@Test
	void testRepartirRegalos2() {

		List<Integer> portales = new ArrayList<Integer>(List.of(2, 5, 1));

		RepartiendoRegalos.repartirRegalos(0, portales);
	}

	@Test
	void testRepartirRegalos3() {

		List<Integer> portales = new ArrayList<Integer>(List.of(2, 4));

		RepartiendoRegalos.repartirRegalos(0, portales);
	}

}
